{
  "$schema": "https://questfoundry.liesdonk.nl/v1/schemas/policy/player_narrator_policy.schema.json",
  "mode": "release",
  "language": "en-US",
  "improv": {
    "allow": false,
    "deviation_radius": 0
  },
  "content_controls": {
    "max_tokens": 1024,
    "target_style": "book-like"
  },
  "safety": {
    "allow_mature": false,
    "profanity_level": "none"
  },
  "narration": {
    "voice": "Ava",
    "speed": 1.0
  },
  "logging": {
    "trace": false,
    "echo_continuity_tags": true
  },
  "constraints": {
    "no_placeholders": true,
    "rewrite_budget": {
      "max_word_delta": 150
    }
  }
}
